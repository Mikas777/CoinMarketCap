<Window
    x:Class="CoinMarketCap.Application.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CoinMarketCap.Application"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CoinMarketCap.Application.Models"
    xmlns:viewModels="clr-namespace:CoinMarketCap.Application.ViewModels"
    xmlns:views="clr-namespace:CoinMarketCap.Application.Views"
    Title="CoinMarketCap"
    Width="1000"
    Height="450"
    Background="White"
    Content="{Binding Content}"
    ShowActivated="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:DashboardPageViewModel}">
            <views:DashboardPageView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:Cryptocurrency}">
            <views:Cryptocurrency />
        </DataTemplate>
    </Window.Resources>

</Window>
